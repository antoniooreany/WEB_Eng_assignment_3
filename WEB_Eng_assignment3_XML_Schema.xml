<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="name">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:string">
                    <xs:attributename="language" type="xs:language"/>
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>
</xs:schema>

        <?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:element name="people">
<xs:complexType>
<xs:sequence>
<xs:element name="student">
<xs:complexType>
    <xs:element name="student">
    <xs:attribute ref="age:integer"/>
    <xs:element name="last_name">
    <xs:simpleContent>
    <xs:extension base="xs:string">
    <xs:element name="first_name">
    <xs:simpleContent>
        <xs:extension base="xs:string">
        <xs:element name="postal_code">
        <xs:simpleContent>
            <xs:extension base="xs:^[0-9][0-9]{4}$"/>
        </xs:simpleContent>

         <xs:element name="email">
            <xs:simpleContent>
                <xs:sequence>
                    <xs:extension base="xs:string"/>
                </xs:sequence>
            </xs:simpleContent>
        </xs:element>
    </xs:simpleContent>
    <xs:element name="phone">
        <xs:attribute ref="type:string">
            <xs:simpleContent>
                <xs:extension base="xs:/d">
                </xs:extension>
            </xs:simpleContent>
        </xs:attribute>
    </xs:element>

    <xs:attributename="language" type="xs:language"/>
</xs:complexType>
</xs:schema>

